<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    tools:context="ofisesoyle.exp2.ShoppingBasketPriceFragment"
    android:background="@color/BackgroundWhite">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="TOPLAM : "
        android:id="@+id/total_price_tw_sb"
        android:textColor="@color/ColorPrimaryDark"
        android:layout_gravity="bottom"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_alignTop="@+id/total_price_sb"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold|italic"
        android:gravity="center_vertical|center_horizontal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="10000 TL"
        android:id="@+id/total_price_sb"
        android:textColor="@color/ColorPrimaryDark"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/total_price_tw_sb"
        android:layout_toEndOf="@+id/total_price_tw_sb"
        android:gravity="end" />
</RelativeLayout>