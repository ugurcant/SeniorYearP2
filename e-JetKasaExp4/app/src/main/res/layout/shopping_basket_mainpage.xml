<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ofisesoyle.exp2.ShoppingBasketFragment"
    android:background="@color/BackgroundWhite">

    <FrameLayout
        android:id="@+id/placeholder_basket"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/placeholder_basket_price"
        android:layout_gravity="center_horizontal|bottom">
    </FrameLayout>

    <FrameLayout
        android:id="@+id/placeholder_basket_price"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_above="@+id/button_finish_shopping">
    </FrameLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="ALIŞVERİŞİ Tamamla"
        android:id="@+id/button_finish_shopping"
        android:background="@color/ColorPrimary"
        android:textColor="@color/BackgroundWhite"
        android:layout_gravity="center_horizontal|bottom"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Ana Menüye Dön"
        android:id="@+id/button_backTo_mainPage"
        android:background="@color/ColorPrimary"
        android:textColor="@color/BackgroundWhite"
        android:layout_gravity="center_horizontal|bottom"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp" />

</RelativeLayout>