<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ColorPrimaryLight">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:scaleType="center"
        android:background="@color/ColorPrimaryDark"
        android:text=" Eklemek İstediğiniz Ürün: "
        android:id="@+id/addtobasket_tw"
        android:textColor="@color/BackgroundWhite"
        android:textSize="20dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:scaleType="center"
        android:background="@color/ColorPrimaryLight"
        android:text=" Barcode: "
        android:id="@+id/addtobasket_product_barcode_tw"
        android:textColor="@color/ColorPrimaryDark"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_below="@+id/addtobasket_tw"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:scaleType="center"
        android:background="@color/ColorPrimaryLight"
        android:text=" Adı: "
        android:id="@+id/addtobasket_product_name_tw"
        android:textColor="@color/ColorPrimaryDark"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_below="@+id/addtobasket_product_barcode_tw"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:scaleType="center"
        android:background="@color/ColorPrimaryLight"
        android:text=" Açıklaması: "
        android:id="@+id/addtobasket_product_info_tw"
        android:textColor="@color/ColorPrimaryDark"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_below="@+id/addtobasket_product_name_tw"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:scaleType="center"
        android:background="@color/ColorPrimaryLight"
        android:text=" Fiyat: "
        android:id="@+id/addtobasket_product_price_tw"
        android:textColor="@color/ColorPrimaryDark"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_below="@+id/addtobasket_product_info"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/addtobasket_product_barcode"
        android:layout_toLeftOf="@+id/addtobasket_product_barcode" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:scaleType="center"
        android:background="@color/ColorPrimaryLight"
        android:text=" Adet:"
        android:id="@+id/addtobasket_product_amount_tw"
        android:textColor="@color/ColorPrimaryDark"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_below="@+id/addtobasket_product_price_tw"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:scaleType="center"
        android:background="@color/ColorPrimaryLight"
        android:text=""
        android:id="@+id/addtobasket_product_barcode"
        android:textColor="@color/BackgroundWhite"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/addtobasket_tw"
        android:layout_toRightOf="@+id/addtobasket_product_barcode_tw"
        android:layout_alignRight="@+id/addtobasket_product_name"
        android:layout_alignEnd="@+id/addtobasket_product_name" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:scaleType="center"
        android:background="@color/ColorPrimaryLight"
        android:text=""
        android:id="@+id/addtobasket_product_name"
        android:textColor="@color/BackgroundWhite"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/addtobasket_product_barcode"
        android:layout_toRightOf="@+id/addtobasket_product_name_tw"
        android:layout_alignRight="@+id/addtobasket_tw"
        android:layout_alignEnd="@+id/addtobasket_tw" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:background="@color/ColorPrimaryLight"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@color/BackgroundWhite"
        android:layout_gravity="center_horizontal"
        android:scaleType="center"
        android:text=""
        android:id="@+id/addtobasket_product_info"
        android:layout_below="@+id/addtobasket_product_name"
        android:layout_toRightOf="@+id/addtobasket_product_info_tw"
        android:layout_alignRight="@+id/addtobasket_product_name"
        android:layout_alignEnd="@+id/addtobasket_product_name" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:background="@color/ColorPrimaryLight"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@color/BackgroundWhite"
        android:layout_gravity="center_horizontal"
        android:scaleType="center"
        android:text=""
        android:id="@+id/addtobasket_product_price"
        android:layout_below="@+id/addtobasket_product_info"
        android:layout_toRightOf="@+id/addtobasket_product_price_tw"
        android:layout_alignRight="@+id/addtobasket_product_name"
        android:layout_alignEnd="@+id/addtobasket_product_name" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/addtobasket_amout"
        android:layout_below="@+id/addtobasket_product_price"
        android:layout_toRightOf="@+id/addtobasket_product_amount_tw"
        android:layout_alignBottom="@+id/addtobasket_product_amount_tw"
        android:entries="@array/adet_arrays"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:textSize="20dp"/>

</RelativeLayout>